<main>

    <div class="row form-flex">
    <div class="card white">
        <div class="card-content">
        <span class="card-title">Forgot Password?</span>
        <form action="/user/password/reset" method='post' id='request-password-form'>
        <div class="row">
            <div class="input-field col s12 ">
            <label for="email">Email:</label>
            <input type="text" name='email' id='email' placeholder='Enter your email' required class='validate'>
                <p class='blue-grey-text'>An email will be sent with password reset instructions.</p>
        </div>
        </div>
        <div class="row login-links">
            <div class="modal-footer login-footer col s8 offset-s2">
            <a class="waves-effect waves-light btn green accent-3" id='request-password-btn'>Submit</a>
            </div>
        </div>
        </form>
        </div>
        </div>
    </div>
</main>