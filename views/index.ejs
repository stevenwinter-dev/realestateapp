<main>
    <div class='index-bg show_bg_2'>
        <h1>Real Estate Finder</h1>
    </div>
    <div class="card-container">
    <% property.forEach(property => { %>
        <div class='card light-blue darken-4 z-depth-3 stock-card'>
            <div class="card-content white-text">
                <h3 class='card-title'>$<%= property.price %></h3>
                <div class='property-content'>
                    <% if(property.img.data) { %>
                        <img src="data:image/<%=property.img.contentType%>;base64,<%=property.img.data.toString('base64')%>">
                    <% } %>
                    <% if(property.imgURL) { %>
                        <img src="<%=property.imgURL%>">
                    <% } %>
                    <div>
                        <div class='property-address'>
                            <p><%= property.address %> |</p>
                            <p><%= property.city %> |</p>
                            <p><%= property.state %> |</p>
                            <p><%= property.zip %></p>
                        </div>
                        <p><%= property.bedrooms %> bedrooms</p>
                        <p><%= property.baths %> baths</p>
                        <p><%= property.seller.email %></p>
                        <div class='btn-container'>
                            <a class="waves-effect waves-light btn" href="/property/<%=property.id%>">Check it out!</a>
                            <form action="/property/favorites" method="POST" class='favorite-form' id='<%= property.id %>'>
                                <input type="hidden" name='id' value='<%=property.id%>'><a class="waves-effect waves-light btn-floating btn-large waves-effect waves-light purple accent-2 favorite-btn"><i class="material-icons" data-id='<%= property.id %>'>bookmark_border</i></a></input>
                            </form>
                        </div>    
                    </div>
                </div>
            </div>
        </div>
    <% }) %>
    </div>
</main>